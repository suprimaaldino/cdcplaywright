{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Playwright Test (Current File)",
            "program": "${workspaceFolder}/node_modules/@playwright/test/lib/cli.js",
            "args": [
                "test",
                "${file}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Playwright Test (All Tests)",
            "program": "${workspaceFolder}/node_modules/@playwright/test/lib/cli.js",
            "args": [
                "test"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
